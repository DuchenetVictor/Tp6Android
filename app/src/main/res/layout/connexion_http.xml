<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/connexion_http"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.iem.tp6_connexionserveurdistant.ConnexionHttpActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <Button
                android:text="Date-Heure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnAffichDateHeure"
                android:layout_weight="1" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtvTime"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="136dp">

            <Button
                android:text="Texte HTML"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnTextHTML"
                android:layout_weight="1" />

            <Button
                android:text="Meteo LoadUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnMeteoLoadUrl"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnMeteoLoadData"
                android:layout_weight="1"
                android:text="Meteo Load Data" />

        </LinearLayout>

        <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/WebView" />
    </LinearLayout>
</RelativeLayout>
